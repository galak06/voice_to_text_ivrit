{
  "transcription": {
    "default_model": "ivrit-ai/whisper-large-v3-turbo-ct2",
    "fallback_model": "ivrit-ai/whisper-large-v3-ct2",
    "default_engine": "faster-whisper",
    "beam_size": 5,
    "language": "he",
