{
  "transcription": {
    "default_model": "ivrit-ai/whisper-large-v3",
    "fallback_model": "large-v3",
    "default_engine": "custom-whisper",
    "beam_size": 5,
    "language": "he",
    "word_timestamps": true,
    "vad_enabled": true,
    "vad_min_silence_duration_ms": 500,
    "available_engines": ["stable-whisper", "custom-whisper", "optimized-whisper"],
    "engine_model_mapping": {
      "stable-whisper": {
        "description": "Standard Whisper models using stable-whisper library",
        "models": [
          "tiny.en",
          "tiny",
          "base.en", 
          "base",
          "small.en",
          "small",
          "medium.en",
          "medium",
          "large-v1",
          "large-v2",
          "large-v3",
          "large",
          "large-v3-turbo",
          "turbo"
        ],
        "features": [
          "Fast processing",
          "Standard Whisper models",
          "Good for general transcription",
          "Lower memory usage"
        ],
        "best_for": "Standard English/Hebrew transcription with official Whisper models"
      },
      "custom-whisper": {
        "description": "Hugging Face models using transformers library",
        "models": [
          "ivrit-ai/whisper-large-v3",
          "ivrit-ai/whisper-large-v3-turbo",
          "ivrit-ai/whisper-v2-d4",
          "ivrit-ai/whisper-large-v3-ggml",
          "ivrit-ai/whisper-large-v3-turbo-ggml"
        ],
        "features": [
          "Hebrew-optimized models",
          "Custom fine-tuned models",
          "High accuracy for Hebrew",
          "Supports Hugging Face models"
        ],
        "best_for": "Hebrew transcription with specialized models"
      },
      "optimized-whisper": {
        "description": "CTranslate2 optimized models for performance",
        "models": [
          "ivrit-ai/whisper-large-v3-turbo-ct2",
          "large-v3-ct2",
          "large-v2-ct2",
          "medium-ct2"
        ],
        "features": [
          "CTranslate2 optimization",
          "Higher performance",
          "Lower memory usage",
          "Faster inference"
        ],
        "best_for": "High-performance transcription with optimized models"
      }
    },
    "model_recommendations": {
      "hebrew_high_accuracy": {
        "model": "ivrit-ai/whisper-large-v3",
        "engine": "custom-whisper",
        "description": "Best for Hebrew transcription accuracy"
      },
      "hebrew_fast": {
        "model": "ivrit-ai/whisper-large-v3-turbo-ct2",
        "engine": "optimized-whisper",
        "description": "Fast Hebrew transcription with good accuracy"
      },
      "english_standard": {
        "model": "large-v3",
        "engine": "stable-whisper",
        "description": "Standard English transcription"
      },
      "multilingual": {
        "model": "large-v3",
        "engine": "stable-whisper",
        "description": "Multilingual transcription support"
      }
    }
  },
  "speaker": {
    "min_speakers": 2,
    "max_speakers": 2,
    "silence_threshold": 1.5,
    "vad_enabled": true,
    "word_timestamps": true,
    "language": "he",
    "beam_size": 5,
    "vad_min_silence_duration_ms": 300,
    "presets": {
      "default": {
        "min_speakers": 2,
        "max_speakers": 2,
        "silence_threshold": 1.5
      },
      "conversation": {
        "min_speakers": 2,
        "max_speakers": 4,
        "silence_threshold": 1.0
      },
      "interview": {
        "min_speakers": 2,
        "max_speakers": 3,
        "silence_threshold": 2.5
      }
    }
  },
  "input": {
    "directory": "examples/audio/voice",
    "supported_formats": [".wav", ".mp3", ".m4a", ".flac", ".ogg", ".aac", ".wma"],
    "recursive_search": true,
    "max_file_size_mb": 100,
    "validate_files": true,
    "auto_discover": true
  },
  "batch": {
    "enabled": true,
    "parallel_processing": false,
    "max_workers": 1,
    "delay_between_files": 0,
    "progress_tracking": true,
    "continue_on_error": true,
    "timeout_per_file": 600,
    "retry_failed_files": true,
    "max_retries": 3
  },
  "docker": {
    "enabled": false,
    "image_name": "whisper-runpod-serverless",
    "tag": "latest",
    "container_name_prefix": "whisper-batch",
    "auto_cleanup": true,
    "timeout_seconds": 3600,
    "memory_limit": "4g",
    "cpu_limit": "2"
  },
  "runpod": {
    "api_key": null,
    "endpoint_id": null,
    "max_payload_size": 209715200,
    "streaming_enabled": true,
    "in_queue_timeout": 300,
    "max_stream_timeouts": 5,
    "max_payload_len": 10485760,
    "enabled": false
  },
  "output": {
    "output_dir": "output/transcriptions",
    "logs_dir": "output/logs",
    "transcriptions_dir": "output/transcriptions",
    "temp_dir": "output/temp",
    "log_level": "INFO",
    "log_file": "transcription.log",
    "save_json": true,
    "save_txt": true,
    "save_docx": true,
    "cleanup_temp_files": true,
    "temp_file_retention_hours": 24,
    "auto_organize": true,
    "include_metadata": true,
    "include_timestamps": true
  },
  "system": {
    "debug": false,
    "dev_mode": false,
    "hugging_face_token": null,
    "timeout_seconds": 300,
    "retry_attempts": 3,
    "auto_cleanup": true,
    "session_management": true,
    "error_reporting": true
  }
}