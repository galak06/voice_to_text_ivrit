{
  "transcription": {
            "default_model": "ivrit-ai/whisper-large-v3-ct2",
        "fallback_model": "ivrit-ai/whisper-large-v3-turbo-ct2",
    "default_engine": "faster-whisper",
    "beam_size": 5,
    "language": "he",
    "word_timestamps": true,
    "vad_enabled": true,
    "vad_min_silence_duration_ms": 500,
            "available_models": [
            "ivrit-ai/whisper-large-v3-ct2",
            "ivrit-ai/whisper-large-v3-turbo-ct2",
            "ivrit-ai/whisper-large-v3",
            "ivrit-ai/whisper-large-v3-turbo",
            "ivrit-ai/whisper-large-v3-ggml",
            "ivrit-ai/whisper-large-v3-turbo-ggml",
            "ivrit-ai/whisper-v2-d4",
            "ivrit-ai/faster-whisper-v2-d4",
            "large-v3",
            "large-v2",
            "large",
            "medium",
            "small",
            "base",
            "tiny"
        ],
    "available_engines": ["faster-whisper", "stable-whisper", "speaker-diarization"]
  },
  "speaker": {
    "min_speakers": 2,
    "max_speakers": 2,
    "silence_threshold": 1.5,
    "vad_enabled": true,
    "word_timestamps": true,
    "language": "he",
    "beam_size": 5,
    "vad_min_silence_duration_ms": 300,
    "presets": {
      "default": {
        "min_speakers": 2,
        "max_speakers": 2,
        "silence_threshold": 1.5
      },
      "conversation": {
        "min_speakers": 2,
        "max_speakers": 4,
        "silence_threshold": 1.0
      },
      "interview": {
        "min_speakers": 2,
        "max_speakers": 3,
        "silence_threshold": 2.5
      }
    }
  },
  "input": {
    "directory": "examples/audio/voice",
    "supported_formats": [".wav", ".mp3", ".m4a", ".flac", ".ogg", ".aac", ".wma"],
    "recursive_search": true,
    "max_file_size_mb": 200,
    "validate_files": true,
    "auto_discover": true
  },
  "batch": {
    "enabled": true,
    "parallel_processing": false,
    "max_workers": 1,
    "delay_between_files": 10,
    "progress_tracking": true,
    "continue_on_error": true,
    "timeout_per_file": 3600,
    "retry_failed_files": true,
    "max_retries": 3
  },
  "docker": {
    "enabled": true,
    "image_name": "whisper-runpod-serverless",
    "tag": "latest",
    "container_name_prefix": "whisper-batch",
    "auto_cleanup": true,
    "timeout_seconds": 3600,
    "memory_limit": "8g",
    "cpu_limit": "4",
    "kill_existing_containers": true,
    "detached_mode": true
  },
  "runpod": {
    "api_key": null,
    "endpoint_id": null,
    "max_payload_size": 209715200,
    "streaming_enabled": true,
    "in_queue_timeout": 600,
    "max_stream_timeouts": 5,
    "max_payload_len": 10485760,
    "enabled": false
  },
  "output": {
    "output_dir": "output/transcriptions",
    "logs_dir": "output/logs",
    "transcriptions_dir": "output/transcriptions",
    "temp_dir": "output/temp",
    "log_level": "INFO",
    "log_file": "docker_batch.log",
    "save_json": true,
    "save_txt": true,
    "save_docx": true,
    "cleanup_temp_files": true,
    "temp_file_retention_hours": 24,
    "auto_organize": true,
    "include_metadata": true,
    "include_timestamps": true
  },
  "system": {
    "debug": false,
    "dev_mode": false,
    "hugging_face_token": null,
    "timeout_seconds": 3600,
    "retry_attempts": 3,
    "auto_cleanup": true,
    "session_management": true,
    "error_reporting": true
  }
} 