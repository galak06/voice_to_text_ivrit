{
  "name": "ivrit_optimized",
  "description": "Configuration optimized for Hebrew transcription using ivrit-ai models",
  "transcription": {
    "engine": "custom-whisper",
    "default_model": "ivrit-ai/whisper-large-v3",
    "fallback_model": "ivrit-ai/whisper-large-v3-turbo",
    "language": "he",
    "vad_enabled": true,
    "word_timestamps": true,
    "speaker_preset": "conversation",
    "available_models": [
      "ivrit-ai/whisper-large-v3",
      "ivrit-ai/whisper-large-v3-turbo",
      "ivrit-ai/whisper-v2-d4",
      "ivrit-ai/whisper-large-v3-ggml",
      "ivrit-ai/whisper-large-v3-turbo-ggml"
    ],
    "model_recommendations": {
      "best_accuracy": {
        "model": "ivrit-ai/whisper-large-v3",
        "engine": "custom-whisper",
        "description": "Highest Hebrew accuracy, slower processing"
      },
      "balanced": {
        "model": "ivrit-ai/whisper-large-v3-turbo",
        "engine": "custom-whisper",
        "description": "Good accuracy, faster processing"
      },
      "fast": {
        "model": "ivrit-ai/whisper-large-v3-turbo-ct2",
        "engine": "optimized-whisper",
        "description": "Fast processing with CTranslate2 optimization"
      }
    },
    "hebrew_optimization": {
      "language": "he",
      "task": "transcribe",
      "num_beams": 5,
      "temperature": 0.0,
      "do_sample": false,
      "length_penalty": 1.0,
      "repetition_penalty": 1.2,
      "no_speech_threshold": 0.6,
      "logprob_threshold": -1.0,
      "compression_ratio_threshold": 2.4,
      "condition_on_previous_text": true,
      "prompt_reset_on_timestamp": true,
      "return_timestamps": true,
      "return_segments": true,
      "return_language": true,
      "suppress_tokens": [-1],
      "suppress_blank": true,
      "without_timestamps": false,
      "max_initial_timestamp": 1.0,
      "max_new_tokens": 400
    }
  },
  "speaker_diarization": {
    "min_speakers": 1,
    "max_speakers": 4,
    "min_speaker_duration": 0.5,
    "speaker_similarity_threshold": 0.7,
    "presets": {
      "conversation": {
        "min_speakers": 2,
        "max_speakers": 4,
        "silence_threshold": 1.0
      },
      "interview": {
        "min_speakers": 2,
        "max_speakers": 3,
        "silence_threshold": 2.5
      },
      "monologue": {
        "min_speakers": 1,
        "max_speakers": 1,
        "silence_threshold": 3.0
      }
    }
  },
  "output": {
    "formats": ["json", "txt", "docx"],
    "include_metadata": true,
    "include_word_timestamps": true,
    "output_directory": "output/transcriptions/ivrit",
    "hebrew_rtl": true,
    "include_confidence_scores": true,
    "include_processing_time": true
  },
  "logging": {
    "level": "INFO",
    "include_timestamps": true,
    "log_to_file": true,
    "log_directory": "output/logs/ivrit"
  },
  "processing": {
    "batch_size": 1,
    "max_audio_duration": 3600,
    "supported_formats": ["wav", "mp3", "m4a", "flac", "ogg"],
    "chunk_duration": 120,
    "memory_optimization": true,
    "model_caching": true,
    "retry_mechanism": true,
    "max_retries": 3
  },
  "performance": {
    "memory_management": {
      "cleanup_frequency": 5,
      "gpu_cache_clearing": true,
      "cpu_memory_optimization": true,
      "model_unloading": true
    },
    "optimization": {
      "use_hebrew_prompt": true,
      "hebrew_context_window": 30,
      "hebrew_sentence_boundaries": true
    }
  }
} 